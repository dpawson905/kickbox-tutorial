extends ../layout

block content
  .container
    .row
      .flex-wrapper
        .col-lg-4.col-md-6.col-12.position-relative
          .profile-image
            img(src="https://robohash.org/kickbox", alt="")
          #list-tab.list-group(role='tablist')
            a#list-home-list.list-group-item.list-group-item-action.active(data-bs-toggle='list' href='#list-home' role='tab' aria-controls='list-home') Information 
            a#list-profile-list.list-group-item.list-group-item-action(data-bs-toggle='list' href='#list-profile' role='tab' aria-controls='list-profile') Box 2
            a#list-messages-list.list-group-item.list-group-item-action(data-bs-toggle='list' href='#list-messages' role='tab' aria-controls='list-messages') Box 3
            a#list-settings-list.list-group-item.list-group-item-action(data-bs-toggle='list' href='#list-settings' role='tab' aria-controls='list-settings') Box 4
        .col-lg-8.col-md-6.col-12
          #nav-tabContent.tab-content
            #list-home.tab-pane.fade.show.active(role='tabpanel' aria-labelledby='list-home-list')
              .row
                p.lead Username: #{user.username}
                hr.style-two
                p.lead Email: #{user.email}
                hr.style-two
            #list-profile.tab-pane.fade(role='tabpanel' aria-labelledby='list-profile-list') ...
            #list-messages.tab-pane.fade(role='tabpanel' aria-labelledby='list-messages-list') ...
            #list-settings.tab-pane.fade(role='tabpanel' aria-labelledby='list-settings-list') ...
  script.
    $(document).ready(function () {
      let $nav = $(".fixed-top");
      $nav.addClass('scrolled');
    });

